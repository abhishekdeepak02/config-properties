        predicates:
        - Path=/order/**
      - id: payment-service
        uri: lb://PAYMENT-SERVICE
        predicates:
        - Path=/payment/**
#        
      - id: product-service
        uri: lb:/PRODUCT-SERVICE
        predicates: 
        - Path=/api/product/**
  security:
